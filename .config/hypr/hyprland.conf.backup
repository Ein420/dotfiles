# Hyprland Configuration
plugin {
    hyprbars {
        bar_height = 25
	bar_color = rgba(000000EE)
	bar_font = System-ui
	bar_text_size = 9
	bar_text_align = left
	bar_part_of_window = true
	bar_precedence_over_border = true
	bar_padding = 8
	bar_button_padding = 7

        # example buttons (R -> L)
        # hyprbars-button = color, size, on-click
        hyprbars-button = rgba(00000000), 16, 󰖭, hyprctl dispatch killactive
        hyprbars-button = rgba(00000000), 16, , hyprctl dispatch fullscreen 0
    }
    hyprfocus {
    enabled = yes
    keyboard_focus_animation = shrink
    mouse_focus_animation = flash

    bezier = bezIn, 0.5,0.0,1.0,0.5
    bezier = bezOut, 0.0,0.5,0.5,1.0

    flash {
        flash_opacity = 0.7

        in_bezier = bezIn
        in_speed = 0.5

        out_bezier = bezOut
        out_speed = 3
    }

    shrink {
        shrink_percentage = 0.8

        in_bezier = bezIn
        in_speed = 0.5

        out_bezier = bezOut
        out_speed = 3
    }
}
}
# See https://wiki.hyprland.org/Configuring/Keywords/ for more

general {
    # See https://wiki.hyprland.org/Configuring/Variables/ for more

    sensitivity=1.00
    apply_sens_to_raw=1
    
    gaps_in = 6
    gaps_out = 20
    border_size = 2
    # col.active_border = rgba(33ccffee) rgba(00ff99ee) 45deg
    col.active_border = rgba(4169E1ee) rgba(dc6c74ee) 45deg
    col.inactive_border = rgba(dc3a5234) rgba(2134b134) 45deg

    layout = dwindle

}

decoration {
    # See https://wiki.hyprland.org/Configuring/Variables/ for more
    rounding = 0
    blur {
    enabled = true
    size = 4
    passes = 4
    ignore_opacity = 1
    new_optimizations = true
    vibrancy = 0.4
    vibrancy_darkness = 0.7
    brightness = 0.7
    xray = false
    contrast = 0.89
    }
    
    drop_shadow = yes
    shadow_range = 12
    shadow_render_power = 3
    col.shadow = rgba(000000FF)

    dim_inactive = 0
    dim_strength = 0

}

#Sourcing external config files
source=~/.config/hypr/configs/keybinds.conf
source=~/.config/hypr/configs/window_rules.conf
source=~/.config/hypr/configs/exec.conf
source=~/.config/hypr/configs/monitors.conf

# Some default env vars.
env = XCURSOR_SIZE,24,XCURSOR,'Breeze Light'


# For all categories, see https://wiki.hyprland.org/Configuring/Variables/
input {
    kb_layout = us
    kb_variant =
    kb_model =
    kb_options =
    kb_rules =
    repeat_rate = 92
    repeat_delay = 255

    follow_mouse = 1
    mouse_refocus = true
    float_switch_override_focus=1
    natural_scroll = 0
    touchpad {
        natural_scroll = no
    }

    sensitivity = 0.5 # -1.0 - 1.0, 0 means no modification.
}


# blurls = waybar

bezier=slow,0,0.85,0.3,1
bezier=overshot,0.7,0.6,0.1,1.1
bezier=bounce,1,1.6,0.1,0.85
bezier=slingshot,1,-1,0.15,1.25
bezier = myBezier, 0.05, 0.9, 0.1, 1.05


animations {
    enabled = yes

    # Some default animations, see https://wiki.hyprland.org/Configuring/Animations/ for more

    # bezier = myBezier, 0.05, 0.9, 0.1, 1.05

    animation = windows, 1, 7, myBezier
    animation = windowsOut, 1, 7, default, popin 70%
    animation = border, 1, 10, default
    animation = borderangle, 1, 35, default
    animation = fade, 1, 8, default
    animation = workspaces, 1, 6, default
}

dwindle {
    # See https://wiki.hyprland.org/Configuring/Dwindle-Layout/ for more
    pseudotile = yes # master switch for pseudotiling. Enabling is bound to mainMod + P in the keybinds section below
    preserve_split = yes # you probably want this
}

master {
    # See https://wiki.hyprland.org/Configuring/Master-Layout/ for more
    new_is_master = true
    new_on_top=0
    mfact = 0.5
}

gestures {
    # See https://wiki.hyprland.org/Configuring/Variables/ for more
    workspace_swipe = off
}

misc {
    mouse_move_enables_dpms = false
    disable_splash_rendering = true
    disable_hyprland_logo = 1

    animate_mouse_windowdragging = false
    animate_manual_resizes = 1

    enable_swallow = true
    no_direct_scanout = true #for fullscreen games
    vrr = 1
}

# Example per-device config
# See https://wiki.hyprland.org/Configuring/Keywords/#executing for more

binds {
    workspace_back_and_forth=1
    allow_workspace_cycles = 1
    pass_mouse_when_bound=0
}

# Cursor
exec-once = hyprctl setcursor 'Breeze Light' 24
exec-once = gsettings set org.gnome.desktop.interface cursor-theme 'Breeze Light'
